{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardApproval": false,
  "argocd": {
    "fileMatch": ["apps/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["argocd"],
      "matchPackageNames": ["*"],
      "enabled": true
    },
    {
      "matchManagers": ["argocd"],
      "matchPackageNames": ["ghcr.io/**"],
      "enabled": false,
      "description": "Disable ArgoCD manager for ghcr.io OCI charts - handled by custom regex manager"
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["ghcr.io/**"],
      "automerge": false,
      "dependencyDashboardApproval": false,
      "description": "OCI Helm charts from ghcr.io"
    },
    {
      "matchManagers": ["*"],
      "matchPackageNames": ["*"],
      "dependencyDashboardApproval": false,
      "description": "Auto-create PRs without dashboard approval"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["apps/.+\\.yaml$"],
      "matchStrings": [
        "repoURL:\\s*(?<packageName>ghcr\\.io/[^\\s]+)\\s+chart:\\s*(?<depName>[^\\s]+)\\s+targetRevision:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "{{{packageName}}}/{{{depName}}}"
    }
  ]
}
